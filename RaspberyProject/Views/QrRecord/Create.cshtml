@model BLL.DTOs.QrRecordDtos.QrRecordAddDto

@{
    ViewData["Title"] = "Yeni QR Kaydı Ekle";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">📥 Yeni QR Kaydı Oluştur</h5>
                </div>
                <div class="card-body">
                    <form asp-controller="QrRecord" asp-action="Create" method="post">

                        <div class="mb-3">
                            <label asp-for="DeviceName" class="form-label"></label>
                            <input asp-for="DeviceName" class="form-control" />
                            <span asp-validation-for="DeviceName" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Content" class="form-label"></label>
                            <input asp-for="Content" class="form-control" />
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ScannedAt" class="form-label"></label>
                            <input asp-for="ScannedAt" type="datetime-local" class="form-control" />
                            <span asp-validation-for="ScannedAt" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">🔙 Geri Dön</a>
                            <button type="submit" class="btn btn-success">💾 Kaydet</button>
                        </div>

                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
